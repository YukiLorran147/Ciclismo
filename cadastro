  <script>
    const nomeInput = document.getElementById('nome');
    nomeInput.addEventListener('input', () => {
      nomeInput.value = nomeInput.value.replace(/[^a-zA-ZÀ-ÿ\s'-]/g, '');
    });

    const cpfInput = document.getElementById('cpf');
    cpfInput.addEventListener('input', () => {
      cpfInput.value = cpfInput.value.replace(/\D/g, '').slice(0, 11);
    });

    const telefoneInput = document.getElementById('telefone');
    telefoneInput.addEventListener('input', () => {
      telefoneInput.value = telefoneInput.value.replace(/\D/g, '').slice(0, 11);
    });

    document.getElementById('formCadastro').addEventListener('submit', (e) => {
      const cpf = cpfInput.value;
      const telefone = telefoneInput.value;
      const nome = nomeInput.value.trim();

      if (cpf.length !== 11) {
        alert('O CPF deve conter exatamente 11 números.');
        cpfInput.focus();
        e.preventDefault();
        return;
      }

      if (telefone.length !== 11) {
        alert('O telefone deve conter exatamente 11 números (DDD + número).');
        telefoneInput.focus();
        e.preventDefault();
        return;
      }

      if (nome.length === 0) {
        alert('Por favor, preencha o nome completo com letras válidas.');
        nomeInput.focus();
        e.preventDefault();
        return;
      }
    });
  </script>
